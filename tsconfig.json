{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "commonjs",
    "outDir": "./output",
    "target": "es6",
    "jsx": "react",
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "types": [
      "cypress"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "babel.config.js",
    "web-build",
    "coverage",
    "amplify",
    "node_modules",
    "native-base-theme/components/index.js"
  ]
}