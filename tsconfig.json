{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "commonjs",
    "outDir": "./output",
    "target": "es6",
    "jsx": "react",
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "lib": ["es6"],
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "react","react-native"],
    "resolveJsonModule": true
  },
  "exclude": [
    "amplify",
    "babel.config.js",
    "web-build",
    "coverage",
    "cypress",
    "amplify",
    "node_modules",
    "**/node_modules/*",
    "**/native-base-theme/*",
    "native-base-theme",
    "native-base-theme/components/index.js"
  ]
}